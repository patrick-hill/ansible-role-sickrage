#
# Systemd unit file for SickRage
#

[Unit]
Description=SickRage Daemon

[Service]
Type=forking
User={{ sickrage_user }}
Group={{ sickrage_group }}
ExecStart=/usr/bin/python {{ sickrage_install_dir }}/SickBeard.py --daemon --datadir={{ sickrage_config_dir }} --config={{ sickrage_config_dir }}/sickrage_config.ini
GuessMainPID=no

[Install]
WantedBy=multi-user.target